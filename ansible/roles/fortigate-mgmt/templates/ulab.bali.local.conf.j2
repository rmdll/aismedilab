server {
listen 80;
listen [::]:80;
listen 443 ssl;
ssl_certificate    /etc/pki/tls/certs/ulab.bali.local.cert.pem;
ssl_certificate_key    /etc/pki/tls/private/ulab.bali.local.key.pem;
root /var/www/ulab.bali.local/;
index index.html index.htm index.nginx-debian.html sign-up.php;
server_name ulab.bali.local;
location ~* \.php$ {
fastcgi_pass unix:/run/php-fpm/www.sock;
include fastcgi_params;
fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
fastcgi_param SCRIPT_NAME $fastcgi_script_name;
}
access_log /var/log/nginx/access_ulab.bali.local.log;
error_log /var/log/nginx/error_ulab.bali.local.log;
location / {
try_files $uri $uri/ =404;
}
}
